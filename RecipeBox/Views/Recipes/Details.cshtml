@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Recipe
<div class="container">

  <h2>RecipeBox Details</h2>
  <hr />
  <h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

  <h5 class="pageLink">@Html.ActionLink("Edit Recipe", "Edit", new { id = Model.RecipeId })</h5>
<h5 class="pageLink2">@Html.ActionLink("Delete Recipe", "Delete", new { id = Model.RecipeId })</h5>
<br/>
  @if(@Model.JoinEntities.Count == 0)
  {
    <p>This RecipeBox does not belong to any Categories</p>
  }
  else
  {
    <hr />
    <h4> Categories List for <strong>@Html.DisplayFor(model => model.Name)</strong></h4>

   
 
    @foreach(var join in Model.JoinEntities)
    {
      <li>@join.Category.Name</li>

      @using (Html.BeginForm("DeleteCategory", "Recipe"))
      {
        @Html.Hidden("joinId", @join.CategoryRecipeId)
        <input type="submit" value="Delete"  class="btn" />
      }
    }
    
  }
  <hr />
  <h5 class="pageLink2">
  @Html.ActionLink("Add more Category for this Recipe", "AddCategory", new { id = Model.RecipeId })</h5> 
  <h5 class="pageLink2">@Html.ActionLink("Recipe List", "Index")</h5> 
</div>




