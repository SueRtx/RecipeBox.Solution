@{
  Layout = "_Layout";
}

@using ToDoList.Models;

<h1>Category List</h1>

@if (@Model.Count == 0)
{
  <h3>No categories have been added yet!</h3>
} 

<ul>
  @foreach(Category category in Model)
  {
    <li>@Html.ActionLink($"{category.Name}", "Details", new { id = category.CategoryId })</li>
  }
</ul>

<h5>@Html.ActionLink("Add New Category", "Create")</h5>
<h5>@Html.ActionLink("Item List", "Index", "Items")</h5>
<h5>@Html.ActionLink("Home", "Index", "Home")</h5>