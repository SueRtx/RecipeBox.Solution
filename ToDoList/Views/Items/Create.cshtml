@{
  Layout = "_Layout";
}

@model ToDoList.Models.Item

<h4>Add Item</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description, new { required = "required" })
<br>
  @Html.Label("Due Date")
  @Html.TextBoxFor(model => model.Date, new { required = "required", @type = "date" })
<br>
  @Html.Label("Select category")
  @Html.DropDownList("CategoryId")
<br>
  <input type="submit" value="Add Item" class="btn" />
}
<h5>@Html.ActionLink("Show all items", "Index")</h5>